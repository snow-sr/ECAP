// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String
  role           Role
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  OwnedCourses   Course[]
  inCourse       Course[]
  OwnedCoursesId Course[]
  InCourseId     Course?  @relation(fields: [courseId], references: [id])
  courseId       String?  @db.ObjectId
  Course         Course[]

  Course Course[]
  Course Course?  @relation(fields: [courseId], references: [id])
}

model Course {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  description      String
  media            String?
  subscriptionForm Json
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  Owner            User     @relation(name: "Ownership", fields: [ownerid], references: [id])
  ownerid          String   @map("ownerid")
  students         User[]   @relation(name: "Course", fields: [studentsid], references: [id])
  studentsid       String   @map("studentsid")
  User             User?    @relation(fields: [userId], references: [id])
  userId           String?  @db.ObjectId
}

model Input {
  id   String  @id @default(auto()) @map("_id") @db.ObjectId
  name String
  type String
  icon String?
}

enum Role {
  ADMIN
  USER
}
